{
  "name": "bootstrap-dark",
  "description": "A Bootstrap 4.1 Dark theme.",
  "version": "1.0.0-alpha.5",
  "scripts": {
    "gulp-watch": "gulp watch",
    "browser-sync": "browser-sync start --server --files \"dist/css/*.css\"",
    "watch": "npm-run-all --parallel gulp-watch browser-sync",
    "version": "gulp && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Carl-Hugo/bootstrap-dark.git"
  },
  "publishConfig": {
    "registry": "https://www.myget.org/F/forevolve/npm/"
  },
  "keywords": [
    "bootstrap",
    "themes",
    "dark-theme"
  ],
  "author": "Carl-Hugo Marcotte",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.1.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "browser-sync": "^2.23.6",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.9.3",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "*",
    "gulp-sass": "^4.0.1",
    "gulp-scss-lint": "^0.6.1",
    "gulp-sourcemaps": "^2.6.4",
    "npm-run-all": "^4.1.2",
    "npm-version": "^1.1.0"
  }
}
